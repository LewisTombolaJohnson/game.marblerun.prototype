{
  "compilerOptions": {
    "composite": true,
    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2020" ]
  },
  "references": [{ "path": "../shared" }],
  "include": ["src"],
  "exclude": ["node_modules"]
}
